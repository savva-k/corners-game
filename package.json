{
  "name": "corners-game",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:savva-k/corners-game.git",
  "author": "Savva Kodeikin",
  "license": "-",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "services/**/*"
    ],
    "nohoist": [
      "services/frontend"
    ]
  },
  "scripts": {
    "server": "yarn workspace @corners-game/server start",
    "client": "yarn workspace @corners-game/frontend start",
    "start": "concurrently \"yarn server\" \"yarn client\"",
    "compile": "tsc --build --force tsconfig.json",
    "clean": "rm -rf packages/common/dist packages/client/dist services/server/dist services/bot/dist services/frontend/dist",
    "clean_node": "rm -rf node_modules packages/common/node_modules packages/client/node_modules services/server/node_modules services/bot/node_modules services/frontend/node_modules"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "concurrently": "^7.1.0"
  },
  "resolutions": {
    "@types/react": "^17.0.0",
    "//": "See https://github.com/facebook/create-react-app/issues/11773, https://stackoverflow.com/questions/70368760/react-uncaught-referenceerror-process-is-not-defined",
    "react-error-overlay": "6.0.11"
  }
}
